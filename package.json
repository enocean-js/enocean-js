{
  "name": "enocean-js",
  "version": "0.1.0",
  "description": "open source java script implementation of the enocean protocol",
  "main": "packages/index.js",
  "jsdelivr": "packages/enocean.js",
  "module": "packages/main.js",
  "nyc": {
    "include": [
      "packages/**/*.js"
    ]
  },
  "standard": {
    "ignore": [
      "/docs/*",
      "/node_modules/*"
    ]
  },
  "scripts": {
    "test": "standard --fix && nyc --reporter=lcov --reporter=text-summary mocha --recursive test",
    "test_only": "mocha --recursive test",
    "coverage": "nyc --reporter=lcov mocha --recursive test && xdg-open ./coverage/lcov-report/index.html",
    "fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enocean-js/enocean-js.git"
  },
  "keywords": [
    "iot",
    "enocean",
    "home",
    "automation",
    "facility",
    "management",
    "smart",
    "home"
  ],
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/enocean-js/enocean-js/issues"
  },
  "homepage": "https://github.com/enocean-js/enocean-js#readme",
  "devDependencies": {
    "chai": "^4.3.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "serialport": "^8.0.8",
    "sinon": "^9.2.4",
    "socket.io": "^2.4.1",
    "standard": "^14.3.4",
    "xml2js": "^0.4.23"
  },
  "dependencies": {
    "@enocean-js/byte-array": "0.0.16",
    "@enocean-js/crc8": "0.0.16",
    "@enocean-js/eep-transcoder": "0.0.16",
    "@enocean-js/esp3-packets": "0.0.16",
    "@enocean-js/esp3-transformer": "0.0.16",
    "@enocean-js/pretty-printer": "0.0.16",
    "@enocean-js/radio-erp1": "0.0.16",
    "@enocean-js/serialport-parser": "0.0.16",
    "@enocean-js/serialport-sender": "0.0.16",
    "esm": "^3.2.25",
    "lit-html": "^1.3.0",
    "t-readable": "^0.1.0"
  }
}
